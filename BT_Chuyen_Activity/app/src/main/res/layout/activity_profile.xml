<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#79CDF1"
    android:layout_columnWeight="16"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="16"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:weightSum="3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Back"
                android:textSize="25dp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:drawableLeft="@drawable/outline_arrow_back_ios_24"
                android:gravity="center|start"
                android:paddingLeft="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Profile"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/baseline_settings_24"
                android:gravity="center|end"
                android:paddingRight="30dp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            tools:layout_editor_absoluteX="-4dp"
            tools:layout_editor_absoluteY="70dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFFFFF" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="215dp"
                android:layout_height="166dp"
                android:layout_marginTop="50dp"
                app:srcCompat="@drawable/profile"
                tools:layout_editor_absoluteX="110dp"
                tools:layout_editor_absoluteY="157dp" />
            <TextView
                android:id="@+id/profileUserName"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Profile Name"
                android:textSize="35dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="serif"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="125"
                        android:textColor="#FFFFFF"
                        android:textSize="60dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Friends"
                        android:fontFamily="serif"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp" />

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_margin="30dp"
                    android:background="#FFFFFF" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="250"
                        android:textColor="#FFFFFF"
                        android:textSize="60dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Follower"
                        android:fontFamily="serif"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:orientation="vertical"
                android:padding="8dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp">

                <TextView
                    android:id="@+id/txtViewId"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="email : mail@email.com"
                    android:fontFamily="serif"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#2196F3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:fontFamily="serif"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Phone : 0365994105"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#2196F3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:fontFamily="serif"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Skype : me007"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#2196F3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Web : cssauthor.com/"
                    android:fontFamily="serif"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>