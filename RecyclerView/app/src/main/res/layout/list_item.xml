<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_item_gio_hang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Ảnh sản phẩm -->
        <ImageView
            android:id="@+id/imgSanPham"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:background="@drawable/bg_image_border"
            android:contentDescription="Ảnh sản phẩm" />

        <!-- Phần thông tin -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/tvTenSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm rất dài ví dụ..."
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@android:color/black"/>

            <!-- Giá -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvGiaGoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₫199.000"
                    android:textSize="13sp"
                    android:textColor="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/tvGiaKhuyenMai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="₫149.000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark"/>
            </LinearLayout>

            <!-- Số lượng -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnTru"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_btn_quantity"
                    android:src="@drawable/ic_remove"
                    app:tint="@android:color/black"
                    android:contentDescription="Giảm số lượng" />

                <TextView
                    android:id="@+id/tvSoLuong"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>

                <ImageButton
                    android:id="@+id/btnCong"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_btn_quantity"
                    android:src="@drawable/ic_add"
                    app:tint="@android:color/black"
                    android:contentDescription="Tăng số lượng" />
            </LinearLayout>

            <!-- Tổng tiền -->
            <TextView
                android:id="@+id/tvTongTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng: ₫149.000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
